.row
  .col-md-12
    %h3.title Listagem de artigos
%hr/

.row
  .col-md-12
    = link_to "+ Adicionar categoria", new_article_category_path, class: 'pull-right btn btn-success btn-sm filter-button'
    %br/
.row
  .col-md-12
    %table.table.table-bordered.table-striped.table-hover
      %thead
        %tr
          %th Nome
          %th Data
          %th Ações
      %tbody
        - @article_categories.each do |article_category|
          %tr
            %td
              %b= article_category.name
            %td= article_category.created_at.strftime("%d/%m/%Y") if article_category.created_at.present?
            %td.col-md-2
              = link_to "", article_category_path(article_category), class: 'btn btn-success btn-xs glyphicon glyphicon-share'
              = link_to "", edit_article_category_path(article_category), class: 'btn btn-primary btn-xs glyphicon glyphicon-pencil'
              = link_to "", article_category_path(article_category), method: :delete, class: 'btn btn-danger btn-xs glyphicon glyphicon-remove', data: { confirm: 'Tem certeza que deseja excluir?'}
