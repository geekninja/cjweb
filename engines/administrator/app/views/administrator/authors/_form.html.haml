= simple_form_for @author do |f|
  .row
    .col-md-8
      = f.input :name
  .row
    .col-md-2
      = f.input :avatar, as: :file
      = link_to "visualizar arquivo atual", f.object.avatar.url, target: '_blank' if !f.object.avatar.to_s.empty?
  %hr/
  .row
    .col-md-12
      = f.button :submit, class: 'btn btn-success'
      = link_to "Voltar para listagem", authors_path, class: 'btn btn-default' 

